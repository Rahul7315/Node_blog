<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to My Blog</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        header {
            background-color: #007bff;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }

        .blog-container {
            max-width: 600px;
            background-color: #fff;
            margin: 0 auto;
            margin-top: 5%;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1, p {
            text-align: center;
            margin-bottom: 16px;
        }

        p {
            color: #555;
        }
        footer {
            background-color: #007bff;
            color: #fff;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
        .delete-button {
            background-color: #ff5c5c; /* Red color */
            color: #fff; /* White text color */
            border: none;
            padding: 10px 15px;
            border-radius: 20px; /* Round shape */
            cursor: pointer;
            margin-left: 90%; /* Adjust margin for right alignment */
        }
    </style>
</head>
<body>
    <header>
        <h1>Welcome to My Blog</h1>
        <p>Exploring the world through words.</p>
    </header>

   <%- include('nav.ejs') %>

   <div class="blog-container">
    <a class="delete-button" data-doc="<%= blog._id %>">Delete</a>
    <h1><%= blog.title %></h1>
    <p><%= blog.title %></p>
    <p>
       <%= blog.content %>
    </p>
    </div>

    <footer>
        <p>&copy; 2024 My Blog. All rights reserved.</p>
    </footer>
</body>
<script>
    const deleteData = document.querySelector('a.delete-button');
  
    deleteData.addEventListener('click',(e)=>{
        const endpoint = `/blogs/${deleteData.dataset.doc}`;
        fetch(endpoint,{
            method : 'DELETE'
        })
        .then((response)=>response.json())
        .then((data)=> window.location.href = data.redirect)
        .then(err => console.log(err));
    })
</script>
</html>
